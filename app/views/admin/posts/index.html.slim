/!breadcrumbs
div#content-header
  div#breadcrumb
    a.tip-bottom title="Go to Home" href= admin_root_path
      i.icon-home
      | 首页
    a.current href="#"
      i.icon-file
      | 文章管理
  <h1>文章管理</h1>
/!End-breadcrumbs

div.container-fluid
  = bootstrap_flash
  = link_to "创建文章", "http://writer.36kr.com", class:"btn btn-primary"

  div.widget-box
    div.widget-title
      span.icon
        i.icon-th
      h5 = page_entries_info @posts

    div class="widget-content nopadding"
      table class="table table-bordered table-striped with-check"
        thead
          tr role="row"
            th styl="width:10%" ID
            th styl="width:20%" 标题
            th styl="width:10%" 作者
            th styl="width:10%" 专栏
            th styl="width:10%" 创建时间
            th styl="width:10%" 状态
            th styl="width:10%" 评论
            th styl="width:10%" 浏览量
            th styl="width:10%" 操作
        tbody
          = render @posts
      div class="pagination pagination-table"
        = paginate @posts

= render 'layouts/set_active_nav', :active_id => "nav_posts"