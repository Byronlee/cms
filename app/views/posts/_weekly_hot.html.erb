<div class="category-popular">
  <h3>
    <i class="icon-hot"></i>
     <span>一周热点</span>
  </h3>
  <ul class="category-popular__list">
    <% @weekly_hot_posts.each do |post| %>
      <li class="cf">
        <span>
          <abbr class="timeago" title="<%= post.created_at %>"><%= post.created_at.strftime('%m/%d %H:%M') %></abbr>
        </span>
        <h1>
          <a href="<%= post_url post %>" title="<%= raw post.title %>"><%= raw post.title %></a>
        </h1>
      </li>
  <% end %>
  </ul>
</div>