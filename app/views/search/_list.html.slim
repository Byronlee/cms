- if @posts.present?
  - @posts.each do |post|
    - @index = (@index || 0) + 1
    article
      a.pic[data-fit-mobile="true" class="badge-#{post['slug']}" href="#{show_post_url post['id']}" data-lazyload="#{high_speed_url post['img'], 'feature'}" data-stat-click="Wenzhangtupian.#{@index}.#{post['id']}.click"]
      .desc
        a.title[href=show_post_url(post['id']) target="_blank" data-stat-click="Wenzhangbiaoti.#{@index}.#{post['id']}.click"]
          = raw post['highlight']
        .author
          a[href="#{post['author']['domain']}" data-stat-click="Wenzhangzuozhe.#{@index}.#{post['id']}.click"]
            span.avatar[data-lazyload="#{post['author']['avatar_url']}"]
            span.name
              = (post['author']['name'])
          span.time
            |&nbsp;â€¢&nbsp;
            = smart_time_ago post['publish_time'].to_time
        .brief
          = raw post['summary']

  = link_to '', search_path(q: params[:q], published_at: @posts.last['publish_time'].to_time.to_i, format: :html), class: 'load-more J_listLoadMore', id: 'search_next_link', 'data-stat-click' => "wenzhanggengduo.click"

- elsif @message.present?
  article.search_none_info
     = @message
- else
  = link_to '', "javascript:void(0)", class: 'load-more J_listLoadMore no-data'