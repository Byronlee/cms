      form name="search_baidu" target="_blank" onsubmit="return goSearch(this)"
        input name="word_display" type="search" placeholder="搜索"
        input name="word" type="hidden"
    nav.second-nav
      ul
        li
          a.second-nav__submit href="http://localhost:3000/pages/contribute" 投稿
        li
          a.second-nav__request href="http://report.36kr.com" 寻求报道
        li.avatar.drop
          - if @current_user
            a.second-nav__account.cf href="javascript:void(0)"
              img.avatar-small.left alt="Violin" height="24" src="http://a.36krcnd.com/user/default_avatars/Violin.png!avatar" width="24"
                span.right  = @current_user.name
            div.dropdown.dropdown-account
              div.dropdown-list.account__list.dropdown__list
                section
                  ul.dropdown-menu
                    li.first
                      a href="/chad_liu"  我的主页
                    li
                      a href="/notifications"  通知中心 +0
                    li
                      a href="/account/edit"  个人设置
                    li
                      a href="/chad_liu/favorites" data-no-turbolink="true"  我的收藏
                    li.last
                      = link_to "注销登录", destroy_user_session_path, method: :delete, class:"dropdown_login_out_link", rel:"nofollow"
          - else
            a.second-nav__login.overlay href="#{user_omniauth_authorize_path(provider: :krypton)}"  登录
